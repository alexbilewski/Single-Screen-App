<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.example.android.myrent.MainActivity">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="196dp"
            android:contentDescription="@string/imgDescription"
            android:scaleType="centerCrop"
            android:src="@drawable/site" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/MainText"
                    android:layout_weight="1"
                    android:text="@string/app_name"
                    android:textAlignment="viewStart"/>

                <RatingBar
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="16dp"
                    android:numStars="5"
                    android:rating="2.5"
                    android:stepSize="0.5" />
            </LinearLayout>

        <TextView
            style="@style/contact"
            android:drawableLeft="@mipmap/ic_call_black_18dp"
            android:autoLink="phone"
            android:text="@string/phoneText" />
        <TextView
            style="@style/contact"
            android:drawableLeft="@mipmap/ic_email_black_18dp"
            android:autoLink="email"
            android:text="@string/email" />
        <TextView
            style="@style/contact"
            android:drawableLeft="@mipmap/ic_access_time_black_18dp"
            android:text="@string/access" />
        <TextView
            style="@style/contact"
            android:drawableLeft="@mipmap/ic_location_on_black_18dp"
            android:text="@string/location" />
        <TextView
            style="@style/contact"
            android:drawableLeft="@mipmap/ic_public_black_18dp"
            android:autoLink="web"
            android:text="@string/www" />
        <TextView
            style="@style/contact"
            android:text="@string/abouthead" />
        <TextView
            style="@style/about"
            android:text="@string/about" />

        <TextView
            android:text="@string/info"
            style="@style/SubText"/>
        <TextView
            android:text="@string/www2"
            style="@style/SubText"
            android:autoLink="web"/>
    </LinearLayout>
</ScrollView>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MainText" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textSize">@dimen/bigLetters</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:layout_marginBottom">@dimen/buttonMarginMainText</item>
    </style>
    <style name="contact" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingLeft">@dimen/padding</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:drawablePadding">38dp</item>
        <item name="android:gravity">center_vertical|left</item>
    </style>
    <style name="about">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:paddingLeft">@dimen/padding</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:layout_marginBottom">@dimen/buttonMarginText</item>
    </style>
    <style name="SubText" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/smallLetters</item>
        <item name="android:paddingLeft">@dimen/padding</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
</resources>
